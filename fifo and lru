#include <stdio.h>

int findLRU(int time[], int n) {
    int min = time[0], pos = 0;
    for (int i = 1; i < n; i++)
        if (time[i] < min) {
            min = time[i];
            pos = i;
        }
    return pos;
}

int main() {
    int n = 3;  // number of frames
    int pages[] = {1, 2, 3, 2, 4, 1, 5};
    int total_pages = sizeof(pages) / sizeof(pages[0]);

    int frames[3], time[3];
    int page_faults = 0, counter = 0;

    printf("=== FIFO Page Replacement ===\n");
    for (int i = 0; i < n; i++) frames[i] = -1;

    int pos = 0;
    for (int i = 0; i < total_pages; i++) {
        int found = 0;
        for (int j = 0; j < n; j++)
            if (frames[j] == pages[i]) found = 1;

        if (!found) {
            frames[pos] = pages[i];
            pos = (pos + 1) % n;
            page_faults++;
        }

        printf("After page %d: ", pages[i]);
        for (int j = 0; j < n; j++) printf("%d ", frames[j]);
        printf("\n");
    }
    printf("Total Page Faults (FIFO): %d\n\n", page_faults);

       printf("=== LRU Page Replacement ===\n");
    for (int i = 0; i < n; i++) frames[i] = -1;
    page_faults = 0;
    counter = 0;

    for (int i = 0; i < total_pages; i++) {
        int found = 0;
        for (int j = 0; j < n; j++) {
            if (frames[j] == pages[i]) {
                found = 1;
                counter++;
                time[j] = counter;
                break;
            }
        }

        if (!found) {
            int empty = -1;
            for (int j = 0; j < n; j++)
                if (frames[j] == -1) { empty = j; break; }

            if (empty != -1) {
                frames[empty] = pages[i];
                counter++;
                time[empty] = counter;
            } else {
                int pos = findLRU(time, n);
                frames[pos] = pages[i];
                counter++;
                time[pos] = counter;
            }
            page_faults++;
        }

        printf("After page %d: ", pages[i]);
        for (int j = 0; j < n; j++) printf("%d ", frames[j]);
        printf("\n");
    }

    printf("Total Page Faults (LRU): %d\n", page_faults);
    return 0;
}

